<% @companies.each do |co| %>
 <div class="row">
    <div class="col s4">
      <div class="card">
        <div class="card-content">
          <span class="card-title"> <%= link_to co.name, company_path(co),class:"companyCard" %> </span>
          <p class="paraCard"><%= co.description %></p>
        </div>
        <div class="card-action">
         <%= link_to "Check offers!", company_path(co)%>
        </div>
      </div>
    </div>
  </div>

<% end %>

<% if user_signed_in?  && current_user.admin%>
<%= link_to 'Add New Company', "../companies/"+@company.id.to_s+"/new"%>
 <% end %>
