
<h2 class="headermonts"><%= @company.name %></h2>
<p class="bodymonts"><%= @company.description %></p></br>

  <div id="map" style="height:300px;width:300px;margin:0 auto; border: 1px solid black;" >
        </div>
        <script>
            function initMap() {
              var myLatLng = {lat: <%= @company.latitude %>,lng: <%= @company.longitude %>};
              // <%#= var myLatLng = {lat: <%#= model.latitude  %>, lng: <%#= model.longitude  %>}; %>

              // Create a map object and specify the DOM elementc
              // for display.
              var map = new google.maps.Map(document.getElementById('map'), {
                center: myLatLng,
                zoom: 4
              });

              // Create a marker and set its position.
              var marker = new google.maps.Marker({
                map: map,
                position: myLatLng,
                title: 'Hello World!'
              });
            }

        </script>
        <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAONLfaXX_aJGJb8PGsC0ZMwuTqqs6Cifw&callback=initMap"
              async defer>
        </script>
<% @company.offers.each do |offer| %>
<div class="row">
<div class="col s4">
  <div class="card">
    <div class="card-image waves-effect waves-block waves-light">
      <%= cl_image_tag offer.image %>
    </div>
    <div class="card-content">
      <span class="card-title activator grey-text text-darken-4 "><%= link_to offer.company.name, company_path(offer.company),class:"companyCard" %><i class="medium material-icons right">arrow_drop_up</i></span>
      <p class="paraCard"> Offer starts: <%= offer.start_Date %></p>
      <p class="paraCard"> Offer Expires: <%= offer.expired_Date %></p>
    </div>
    <div class="card-reveal upCard">
      <span class="card-title grey-text text-darken-4"><%= offer.company.name %><i class="medium material-icons right">close</i></span>
      <%= offer.offer_Description %>
    </div>
  </div>
  </div>
  </div>
  <% end%>


<% if user_signed_in?  && current_user.admin%>
<p><%= link_to("Edit Company", edit_company_path(@company)) %></p>
<p><%= link_to "Delete Company", company_path(@company), method: :delete %></p>
<%= link_to 'Add New Offer', "../offers/"+@company.id.to_s+"/new"%>
<% end%>
