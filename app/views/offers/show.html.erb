<h1>Offer Show Page</h1>
<h2> <%= @offer.company.name %> </h2>
<h4><%= @offer.offer_Description %></h4>
<p> <%= @offer.image %></p>
<p> Offer starts: <%= @offer.start_Date %> Offer Expires: <%= @offer.expired_Date %></p>

<% if user_signed_in?  && current_user.admin%>
<p><%= link_to("Edit Offer", edit_offer_path(@offer)) %></p>
<p><%= link_to "Delete Offer", company_path(@offer), method: :delete %></p>
<%= link_to 'Add New Offer', "../offers/"+@offer.id.to_s+"/new"%>
<% end%>


<div id="map" style="height:300px;width:300px;margin:0 auto; border: 1px solid black;" ></div>
    <script>
      function initMap() {
        var myLatLng = {lat: <%= @offer.company.latitude %>,lng: <%= @offer.company.longitude %>};
        // <%#= var myLatLng = {lat: <%#= model.latitude  %>, lng: <%#= model.longitude  %>}; %>

        // Create a map object and specify the DOM elementc
        // for display.
        var map = new google.maps.Map(document.getElementById('map'), {
          center: myLatLng,
          zoom: 4
        });

        // Create a marker and set its position.
        var marker = new google.maps.Marker({
          map: map,
          position: myLatLng,
          title: 'Hello World!'
        });
      }

    </script>
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAONLfaXX_aJGJb8PGsC0ZMwuTqqs6Cifw&callback=initMap"
        async defer></script>
    