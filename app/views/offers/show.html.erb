<div class="row">
  <div class="col s11 m7 l7 offset-m2 offset-l2">

    <div class="card sticky-action">
      <div class="card-image waves-effect waves-block waves-light">
        <img class="activator" src='<%= @offer.image %>'>
      </div>

      <div class="card-content">
        <span class="card-title activator cc"><%= @offer.company.name %></span>
      </div>

      <div class="card-reveal">
        <span class="card-title ct"><%= @offer.company.name %><i class="material-icons right">close</i></span><br>
        <p class="concertFont"><%= @offer.offer_Description %></p>
        <p class="paraCard"> Offer starts: <%= @offer.start_Date %></p>
        <p class="paraCard"> Offer Expires: <%= @offer.expired_Date %></p> 

      </div>

      <div class="card-action cli">
          <% if user_signed_in?  && current_user.admin%>
          <%= link_to("Edit Offer", edit_offer_path(@offer)) %>
          <%= link_to "Delete Offer", company_path(@offer), method: :delete %>
          <%= link_to 'Add New Offer', "../offers/new"%>
        <% end%>
      </div>
    </div>
  </div>
</div>

  
