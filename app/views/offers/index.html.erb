
<% @offers.each do |offer| %>
<div class="row">
<div class="col s4">
  <div class="card">
    <div class="card-image waves-effect waves-block waves-light">
      <%= cl_image_tag offer.image, class:"imgSize" %>
    </div>
    <div class="card-content">
      <span class="card-title activator grey-text text-darken-4 "><%= link_to offer.company.name, company_path(offer.company),class:"companyCard" %><i class="medium material-icons right">arrow_drop_up</i></span>
      <p class="paraCard"> Offer starts: <%= offer.start_Date %> Offer Expires: <%= offer.expired_Date %></p>
    </div>
    <div class="card-reveal upCard">
      <span class="card-title grey-text text-darken-4"><%= offer.company.name %><i class="medium material-icons right">close</i></span>
      <%= offer.offer_Description %>
      
        <div id="map" style="height:200px;width:200px;margin:0 auto; border: 1px solid black;" ></div>
    <script>
      function initMap() {
        var myLatLng = {lat: <%= offer.company.latitude %>,lng: <%= offer.company.longitude %>};
        // <%#= var myLatLng = {lat: <%#= model.latitude  %>, lng: <%#= model.longitude  %>}; %>

        // Create a map object and specify the DOM elementc
        // for display.
        var map = new google.maps.Map(document.getElementById('map'), {
          center: myLatLng,
          zoom: 4
        });

        // Create a marker and set its position.
        var marker = new google.maps.Marker({
          map: map,
          position: myLatLng,
          title: 'Hello World!'
        });
      }

    </script>
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAONLfaXX_aJGJb8PGsC0ZMwuTqqs6Cifw&callback=initMap"
        async defer></script>
    
      
    </div>
  </div>
  </div>

<% end %>

