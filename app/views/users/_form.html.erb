<%= form_for @company do |f| %>
    <div class="field container">
        <%= f.label :name %>    
        <%= f.text_field :name, required: true %>
    </div><br>

    <div class="field container">
        <%= f.label :description %>   
        <%= f.text_field :description, required: true %>
    </div><br>

    <div class="field container">
        <%= f.label :image %>   
        <%= f.select :image %>
    </div><br>

    <div class="actions container"> 
        <% if @company.id %>
            <%= f.submit "Edit Company" %>
        <% else %>
            <%= f.submit "New Company" %>
        <% end %>
    </div>
<%end %>